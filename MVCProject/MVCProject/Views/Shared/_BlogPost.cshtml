@model MVCProject.Models.BlogEntry

<div class="row">
    <br>
    <div class="col-md-2 col-sm-3 text-center">
        <a class="story-img" href="#"><img src="@Model.Thumbnail" style="width:100px;height:100px" class="img-circle"></a>
    </div>
    <div class="col-md-10 col-sm-9">
        <h3>@Model.Title</h3>
        <div class="row">
            <div class="col-xs-9">
                <p>@Model.Content</p>
                <p class="lead"><button class="btn btn-default">Read More</button></p>
                <p class="pull-right">@foreach (MVCProject.Models.Tag t in Model.Tags) {<span class="label label-default">@t.Display</span> }</p>
                <ul class="list-inline"><li>@Model.TimeStamp</li><li><a href="#"><i class="glyphicon glyphicon-comment"></i> @Model.Comments.Count Comments</a></li></ul>
            </div>
            <div class="col-xs-3"></div>
        </div>
        <br><br>
    </div>
</div>
<hr>
