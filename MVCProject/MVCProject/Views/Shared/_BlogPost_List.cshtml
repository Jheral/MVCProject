@model MVCProject.Models.BlogEntry

<div class="row">
    <br>
    <div class="col-md-2 col-sm-3 text-center">
        <a class="story-img" href="/Home/Details/@Model.Id"><img src="@Model.Thumbnail" style="width:100px;height:100px" class="img-circle"></a>
    </div>
    <div class="col-md-10 col-sm-9">
        <h3>@Html.ActionLink(@Model.Title, "Details", "Home", new { id = Model.Id }, null)</h3>
        <div class="row">
            <div class="col-xs-9">
                <p>@Html.Raw(Model.ContentShort)</p>
                <p class="lead">@Html.ActionLink("Read More", "Details", "Home", new { id = Model.Id }, new { @class = "btn btn-default" })</p>
                <ul class="list-inline"><li>@Model.TimeStamp by @Html.ActionLink(@Model.Author.UserName, "BlogList", "Home", new { User = @Model.Author.UserName }, null)</li><li>@Html.ActionLink(@Model.Comments.Count + " Comments", "Details", "Home", new { id = Model.Id }, null)</li></ul>
                <p class="pull-right">@foreach (MVCProject.Models.Tag t in Model.Tags) {<span class="label label-default">@Html.ActionLink(@t.Display, "BlogList", "Home", new { Tag = @t.InternalName }, null)</span> }</p>
            </div>
            <div class="col-xs-3"></div>
        </div>
        <br><br>
    </div>
</div>
<hr>
