@model MVCProject.Models.BlogEntry

<div class="row">
    <br>
    <div class="col-md-2 col-sm-3 text-center">
        <img src="@Model.Thumbnail" class="img-circle">
    </div>
    <div class="col-md-10 col-sm-9">
        <h3>@Model.Title</h3>
        <div class="row">
            <div class="col-xs-9">
                <p>@Html.Raw(Model.ContentShort)</p>
            </div>
        </div>
        <br><br>
    </div>
</div>
<hr>
<p class="pull-right">@foreach (MVCProject.Models.Tag t in Model.Tags) {<span class="label label-default">@Html.ActionLink(@t.Display, "BlogList", "Home", new { Tag = @t.InternalName }, null)</span> }</p>
<ul class="list-inline"><li>@Model.TimeStamp by @Html.ActionLink(@Model.Author.UserName, "BlogList", "Home", new { User = @Model.Author.UserName }, null)</li><li><a href=""><i class="glyphicon glyphicon-comment"></i> @Model.Comments.Count Comments</a></li></ul>
